<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CommuDev" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/medium_green</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/light_green</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>
    </style>

    <!-- No ActionBar theme -->
    <style name="Theme.CommuDev.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application Splash theme -->
    <style name="Theme.CommuDev.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/light_green</item>
        <item name="android:statusBarColor">@color/light_green</item>
    </style>
</resources>