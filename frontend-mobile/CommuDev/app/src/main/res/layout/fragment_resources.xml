<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Community Members Horizontal Scroll -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/communityMembersCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:layout_margin="16dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Prev button -->
                            <ImageButton
                                android:id="@+id/prevMemberButton"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_button_gray"
                                android:src="@drawable/ic_chevron_left"
                                android:contentDescription="@string/previous"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp" />

                            <!-- Members list from layout -->
                            <!-- Keep existing member layout content -->

                            <!-- Next button -->
                            <ImageButton
                                android:id="@+id/nextMemberButton"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_button_gray"
                                android:src="@drawable/ic_chevron_right"
                                android:contentDescription="@string/next"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </androidx.cardview.widget.CardView>

                <!-- Resource Hub Header -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/resourceHubHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/resourceHubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resource_hub"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/createResourceButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_resource"
                        app:icon="@drawable/ic_add"
                        android:textColor="@color/white"
                        app:iconTint="@color/white"
                        android:backgroundTint="@color/light_green"
                        app:cornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Resource Type Tabs -->
                <LinearLayout
                    android:id="@+id/resourceTypeTabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/allResourcesTab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/all_resources"
                        android:textColor="@color/white"
                        android:background="@drawable/tab_active"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/documentsTab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/documents"
                        android:textColor="@color/dark_gray"
                        android:background="@drawable/tab_inactive"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/mediaTab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/media"
                        android:textColor="@color/dark_gray"
                        android:background="@drawable/tab_inactive"
                        android:gravity="center"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyResourcesView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone"
                    android:layout_margin="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_resources"
                        android:alpha="0.5"
                        android:contentDescription="No resources" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="No resources found"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Be the first to share resources with your community!"
                        android:textColor="@color/medium_gray" />
                </LinearLayout>

                <!-- Resources List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/resourcesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:padding="16dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_resource" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>