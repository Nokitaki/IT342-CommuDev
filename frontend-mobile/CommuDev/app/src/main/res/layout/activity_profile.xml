<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ProfileActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Profile"
            app:titleTextColor="@color/dark_gray">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back"
                android:tint="@color/dark_gray" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cover Photo Area -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/coverPhotoImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/very_light_gray"
                    android:contentDescription="@string/cover_photo" />

                <Button
                    android:id="@+id/editCoverButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:text="@string/edit_cover_photo"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/light_green" />
            </FrameLayout>

            <!-- Profile Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-40dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/profilePictureCard"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="-50dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="4dp">

                            <ImageView
                                android:id="@+id/profilePicture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/profile_picture"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_placeholder" />

                            <ImageView
                                android:id="@+id/editProfilePictureButton"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="bottom|end"
                                android:background="@drawable/circle_button_gray"
                                android:contentDescription="@string/edit_profile_picture"
                                android:padding="4dp"
                                android:src="@drawable/ic_camera" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/profilePictureCard"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/userNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Profile"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/userRoleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Community Development Advocate"
                                android:textColor="@color/medium_gray"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/editProfileButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/edit_profile"
                                android:textColor="@color/light_green"
                                app:cornerRadius="20dp"
                                app:strokeColor="@color/light_green" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Profile Stats -->
                    <LinearLayout
                        android:id="@+id/statsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/postsCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_gray"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/medium_gray"
                                android:text="Posts" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/light_gray" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/friendsCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_gray"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/medium_gray"
                                android:text="Friends" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/light_gray" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/rewardsCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_gray"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/medium_gray"
                                android:text="Rewards" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Profile navigation tabs -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/profileTabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabIndicatorColor="@color/light_green"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/light_green"
                        app:tabTextColor="@color/medium_gray">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/posts" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/friends" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/photos" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more" />
                    </com.google.android.material.tabs.TabLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Profile Content Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/introCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/intro"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_clock"
                            android:tint="@color/medium_gray"
                            android:contentDescription="@string/joined_date" />

                        <TextView
                            android:id="@+id/joinedDateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/recently_joined" />
                    </LinearLayout>

                    <!-- Social Media Links -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">

                        <ImageButton
                            android:id="@+id/facebookButton"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_button_blue"
                            android:src="@drawable/ic_facebook"
                            android:tint="@color/white"
                            android:contentDescription="@string/facebook"
                            android:layout_marginEnd="16dp" />

                        <ImageButton
                            android:id="@+id/instagramButton"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_button_pink"
                            android:src="@drawable/ic_instagram"
                            android:tint="@color/white"
                            android:contentDescription="@string/instagram"
                            android:layout_marginEnd="16dp" />

                        <ImageButton
                            android:id="@+id/linkedinButton"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_button_blue_dark"
                            android:src="@drawable/ic_linkedin"
                            android:tint="@color/white"
                            android:contentDescription="@string/linkedin" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Photos Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/photosCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/photos"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/seeAllPhotosText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_all"
                            android:textColor="@color/light_green" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/photosProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/noPhotosText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/photos_will_appear_here"
                        android:textAlignment="center"
                        android:padding="24dp"
                        android:textColor="@color/medium_gray" />

                    <!-- Photos grid would go here, but hidden initially -->
                    <GridView
                        android:id="@+id/photosGridView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="3"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Friends Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/friendsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/friends"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/seeAllFriendsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_all"
                            android:textColor="@color/light_green" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/friendsProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/noFriendsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/friends_will_appear_here"
                        android:textAlignment="center"
                        android:padding="24dp"
                        android:textColor="@color/medium_gray" />

                    <!-- Friends list would go here, but hidden initially -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/friendsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- About Section Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/aboutSectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <!-- About section content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Bio section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bio"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/userBioText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I am a passionate community advocate focused on connecting people and resources for sustainable development."
                        android:layout_marginBottom="16dp" />

                    <!-- Personal info section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Email:" />

                        <TextView
                            android:id="@+id/userEmailText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user@example.com" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Location:" />

                        <TextView
                            android:id="@+id/userLocationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manila, Philippines" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Create Post Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/createPostCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile_placeholder"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/profile_picture" />
                        </com.google.android.material.card.MaterialCardView>

                        <EditText
                            android:id="@+id/postInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/whats_on_your_mind"
                            android:inputType="textMultiLine"
                            android:minHeight="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/liveVideoButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_live_video"
                            android:text="@string/live_video"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/photoVideoButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_photo"
                            android:text="@string/photo_video"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/feelingActivityButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_feeling"
                            android:text="@string/feeling_activity"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Loading Posts Indicator -->
            <ProgressBar
                android:id="@+id/postsProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/loadingPostsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_posts"
                android:textAlignment="center"
                android:padding="16dp"
                android:textColor="@color/medium_gray" />

            <TextView
                android:id="@+id/noPostsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No posts yet. Create your first post!"
                android:textAlignment="center"
                android:padding="16dp"
                android:visibility="gone"
                android:textColor="@color/medium_gray" />

            <!-- Posts would be added here dynamically -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/postsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>